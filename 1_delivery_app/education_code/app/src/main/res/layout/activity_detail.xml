<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".FoodActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#00000000"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:background="#00000000"/>

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:src="@drawable/burger3"
        app:layout_constraintTop_toBottomOf="@+id/detail_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:orientation="vertical"
        android:background="@drawable/detail_back"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_image">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Burger"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/detail_price"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#F8C471"
                android:textStyle="bold"
                android:text="$8.99"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enjoy cheap and delicious foods at home.Once you taste it, it's a powerful taste that you can never forget. As soon as you receive your order, you can cook it and eat it warm."
            android:textSize="15dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/buy_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_back"
            android:layout_gravity="bottom"
            android:text="BUY NOW"
            android:textStyle="bold"
            android:layout_marginTop="80dp"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/cart"
            android:paddingLeft="20dp"
            android:paddingRight="35dp"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>